<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_background"
    android:padding="@dimen/_16dp"

    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/som_icon"
        android:layout_width="@dimen/_44dp"
        android:layout_height="@dimen/_44dp"
        android:src="@drawable/som_icon"/>
    <TextView
        android:id="@+id/som_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/som"
        android:fontFamily="@font/mont_semibold"
        android:textColor="#B2B2B2"
        android:letterSpacing="-0.01"
        android:textSize="@dimen/_15sp"
        app:layout_constraintStart_toEndOf="@id/som_icon"
        app:layout_constraintTop_toTopOf="@id/som_icon"
        android:layout_marginTop="@dimen/_2dp"
        android:layout_marginStart="@dimen/_10dp"/>
    <TextView
        android:id="@+id/som_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="333 333$"
        android:textColor="#1D1D1B"
        android:letterSpacing="-0.01"
        android:textSize="@dimen/_22sp"
        android:fontFamily="@font/mont_semibold"
        android:layout_marginTop="-4dp"
        app:layout_constraintTop_toBottomOf="@id/som_title"
        app:layout_constraintStart_toStartOf="@id/som_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_64dp"
        android:layout_height="@dimen/_20dp"
        android:background="@drawable/card_number_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*998"
            android:textSize="@dimen/_11sp"
            android:textColor="@color/white"
            android:fontFamily="@font/mont_semibold"
            android:letterSpacing="-0.01"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_marginVertical="@dimen/_3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/card_number_icon"
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:src="@drawable/icon_sum_som"
            android:layout_marginEnd="@dimen/_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/convert_layout"
        android:layout_width="@dimen/_165dp"
        android:layout_height="@dimen/_31dp"
        android:background="@drawable/convert_btn_background"
        app:layout_constraintTop_toBottomOf="@id/som_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/accept_layout"
        android:layout_marginTop="@dimen/_22dp">
        <ImageButton
            android:id="@+id/convert_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/convert_esom"
            android:textSize="@dimen/_12sp"
            android:fontFamily="@font/mont_semibold"
            android:textColor="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/accept_layout"
        android:layout_width="@dimen/_121dp"
        android:layout_height="@dimen/_31dp"
        android:background="@drawable/accept_btn_background"
        app:layout_constraintTop_toBottomOf="@id/som_icon"
        app:layout_constraintStart_toEndOf="@id/convert_layout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_22dp">
        <ImageButton
            android:id="@+id/accept_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/accept_esom"
            android:textSize="@dimen/_12sp"
            android:fontFamily="@font/mont_semibold"
            android:textColor="#E62324" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>