<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EEEE"
    tools:context=".screens.auth.AuthFragment"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/fcb_icon"
        android:layout_width="@dimen/_68dp"
        android:layout_height="@dimen/_88dp"
        android:layout_marginTop="@dimen/_27dp"
        android:src="@drawable/fcb_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_88dp"
        android:fontFamily="@font/mont_bold"
        android:text="@string/welcome"
        android:textColor="@color/title"
        android:textSize="@dimen/_27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fcb_icon" />

    <TextView
        android:id="@+id/phone_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_33dp"
        android:layout_marginTop="@dimen/_22dp"
        android:fontFamily="@font/mont_semibold"
        android:text="@string/phone_hint"
        android:textColor="#B2B2B2"
        android:textSize="@dimen/_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_22dp"
        android:layout_marginTop="@dimen/_6dp"
        android:background="@drawable/phone_password_input_background"
        android:fontFamily="@font/mont_medium"
        android:hint="@string/enter_phone"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textColorHint="#B2B2B2"
        android:textSize="@dimen/_18sp"
        app:layout_constraintTop_toBottomOf="@id/phone_hint" />

    <TextView
        android:id="@+id/password_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_33dp"
        android:layout_marginTop="@dimen/_22dp"
        android:fontFamily="@font/mont_semibold"
        android:text="@string/password_hint"
        android:textColor="#B2B2B2"
        android:textSize="@dimen/_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_input" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_22dp"
        android:layout_marginTop="@dimen/_6dp"
        android:background="@drawable/phone_password_input_background"
        android:fontFamily="@font/mont_medium"
        android:hint="@string/enter_password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textColorHint="#B2B2B2"
        android:textSize="@dimen/_18sp"
        app:layout_constraintTop_toBottomOf="@id/password_hint" />

    <ImageView
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:scaleX="1.65"
        android:scaleY="1.6"
        android:src="@drawable/button_background"
        app:layout_constraintBottom_toBottomOf="@id/log_in_btn"
        app:layout_constraintEnd_toEndOf="@id/log_in_btn"
        app:layout_constraintStart_toStartOf="@id/log_in_btn"
        app:layout_constraintTop_toTopOf="@id/log_in_btn" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/log_in_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_marginHorizontal="@dimen/_22dp"
        android:layout_marginTop="@dimen/_61dp"
        app:cardBackgroundColor="#E62324"
        app:cardCornerRadius="@dimen/_12dp"
        app:cardElevation="@dimen/_0dp"
        app:layout_constraintTop_toBottomOf="@id/password_input"
        app:strokeWidth="@dimen/_0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/log_in_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mont_semibold"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                app:indicatorColor="@color/white"
                app:indicatorSize="@dimen/_38dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:trackThickness="@dimen/_5dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/reg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6dp"
        android:paddingVertical="@dimen/_11dp"
        android:fontFamily="@font/mont_medium"
        android:gravity="center"
        android:text="@string/registration"
        android:textColor="#E62324"
        android:textSize="@dimen/_16sp"
        app:layout_constraintTop_toBottomOf="@id/log_in_btn" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_27dp"
        android:fontFamily="@font/mont_semibold"
        android:gravity="center"
        android:text="@string/version_title"
        android:textColor="#B2B2B2"
        android:textSize="@dimen/_14sp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>