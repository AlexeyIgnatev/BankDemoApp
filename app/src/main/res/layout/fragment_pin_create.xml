<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EEEE"
    tools:context=".screens.pinCreate.PinCreateFragment"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:padding="@dimen/_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/back_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4dp"
            android:fontFamily="@font/mont_bold"
            android:text="@string/back"
            android:textColor="#E62324"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="@id/back_icon"
            app:layout_constraintStart_toEndOf="@id/back_icon"
            app:layout_constraintTop_toTopOf="@id/back_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="@id/back_layout"
        app:layout_constraintEnd_toEndOf="@id/back_layout"
        app:layout_constraintStart_toStartOf="@id/back_layout"
        app:layout_constraintTop_toTopOf="@id/back_layout" />

    <TextView
        android:id="@+id/pin_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30dp"
        android:fontFamily="@font/mont_semibold"
        android:letterSpacing="-0.01"
        android:text="@string/write_pin"
        android:textColor="#1D1D1B"
        android:textSize="@dimen/_22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_layout" />

    <LinearLayout
        android:id="@+id/pin_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_32dp"
        android:layout_marginTop="@dimen/_22dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pin_hint">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_layout"
            android:layout_width="@dimen/_22dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_6dp">

            <View
                android:id="@+id/one"
                android:layout_width="@dimen/_9dp"
                android:layout_height="@dimen/_9dp"
                android:background="@drawable/pin_not_choose_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_layout"
            android:layout_width="@dimen/_22dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_6dp"
            android:layout_marginEnd="@dimen/_6dp">

            <View
                android:id="@+id/two"
                android:layout_width="@dimen/_9dp"
                android:layout_height="@dimen/_9dp"
                android:background="@drawable/pin_not_choose_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/third_layout"
            android:layout_width="@dimen/_22dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_6dp"
            android:layout_marginEnd="@dimen/_6dp">

            <View
                android:id="@+id/three"
                android:layout_width="@dimen/_9dp"
                android:layout_height="@dimen/_9dp"
                android:background="@drawable/pin_not_choose_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fourth_layout"
            android:layout_width="@dimen/_22dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_6dp"
            android:layout_marginEnd="@dimen/_6dp">

            <View
                android:id="@+id/four"
                android:layout_width="@dimen/_9dp"
                android:layout_height="@dimen/_9dp"
                android:background="@drawable/pin_not_choose_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pin_digs_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pin_layout">

        <TextView
            android:id="@+id/pinc_dig1_btn"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mont_semibold"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:padding="@dimen/_4dp"
            android:text="1"
            android:textColor="#1D1D1B"
            android:textSize="@dimen/_32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/pinc_dig2_btn"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_60dp"
            android:fontFamily="@font/mont_semibold"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:padding="@dimen/_4dp"
            android:text="2"
            android:textColor="#1D1D1B"
            android:textSize="@dimen/_32sp"
            app:layout_constraintStart_toEndOf="@id/pinc_dig1_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pinc_dig3_btn"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_60dp"
            android:fontFamily="@font/mont_semibold"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:padding="@dimen/_4dp"
            android:text="3"
            android:textColor="#1D1D1B"
            android:textSize="@dimen/_32sp"
            app:layout_constraintStart_toEndOf="@id/pinc_dig2_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pinc_dig4_btn"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:fontFamily="@font/mont_semibold"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:padding="@dimen/_4dp"
            android:text="4"
            android:textColor="#1D1D1B"
            android:textSize="@dimen/_32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pinc_dig1_btn"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/pinc_dig5_btn"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_60dp"
            android:layout_marginTop="@dimen/_30dp"
            android:fontFamily="@font/mont_semibold"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:padding="@dimen/_4dp"
            android:text="5"
            android:textColor="#1D1D1B"
            android:textSize="@dimen/_32sp"
            app:layout_constraintStart_toEndOf="@id/pinc_dig4_btn"
            app:layout_constraintTop_toBottomOf="@id/pinc_dig1_btn" />

        <TextView
            android:id="@+id/pinc_dig6_btn"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_60dp"
            android:layout_marginTop="@dimen/_30dp"
            android:fontFamily="@font/mont_semibold"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:padding="@dimen/_4dp"
            android:text="6"
            android:textColor="#1D1D1B"
            android:textSize="@dimen/_32sp"
            app:layout_constraintStart_toEndOf="@id/pinc_dig5_btn"
            app:layout_constraintTop_toBottomOf="@id/pinc_dig1_btn" />

        <TextView
            android:id="@+id/pinc_dig7_btn"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:fontFamily="@font/mont_semibold"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:padding="@dimen/_4dp"
            android:text="7"
            android:textColor="#1D1D1B"
            android:textSize="@dimen/_32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pinc_dig4_btn"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/pinc_dig8_btn"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_60dp"
            android:layout_marginTop="@dimen/_30dp"
            android:fontFamily="@font/mont_semibold"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:padding="@dimen/_4dp"
            android:text="8"
            android:textColor="#1D1D1B"
            android:textSize="@dimen/_32sp"
            app:layout_constraintStart_toEndOf="@id/pinc_dig7_btn"
            app:layout_constraintTop_toBottomOf="@id/pinc_dig4_btn" />

        <TextView
            android:id="@+id/pinc_dig9_btn"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_60dp"
            android:layout_marginTop="@dimen/_30dp"
            android:fontFamily="@font/mont_semibold"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:padding="@dimen/_4dp"
            android:text="9"
            android:textColor="#1D1D1B"
            android:textSize="@dimen/_32sp"
            app:layout_constraintStart_toEndOf="@id/pinc_dig8_btn"
            app:layout_constraintTop_toBottomOf="@id/pinc_dig4_btn" />

        <TextView
            android:id="@+id/pinc_dig0_btn"
            android:layout_width="@dimen/_50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_60dp"
            android:layout_marginTop="@dimen/_30dp"
            android:fontFamily="@font/mont_semibold"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:padding="@dimen/_4dp"
            android:text="0"
            android:textColor="#1D1D1B"
            android:textSize="@dimen/_32sp"
            app:layout_constraintStart_toEndOf="@id/pinc_dig7_btn"
            app:layout_constraintTop_toBottomOf="@id/pinc_dig8_btn" />

        <ImageButton
            android:id="@+id/pinc_digback_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_60dp"
            android:layout_marginTop="@dimen/_30dp"
            android:background="@android:color/transparent"
            android:paddingLeft="@dimen/_4dp"
            android:paddingTop="@dimen/_8dp"
            android:paddingRight="@dimen/_20dp"
            android:paddingBottom="@dimen/_8dp"
            app:layout_constraintStart_toEndOf="@+id/pinc_dig8_btn"
            app:layout_constraintTop_toBottomOf="@+id/pinc_dig9_btn"
            app:srcCompat="@drawable/ic_backspace" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>