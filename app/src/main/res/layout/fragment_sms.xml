<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EEEE"
    tools:context=".screens.sms.SmsFragment"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:padding="@dimen/_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/back_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4dp"
            android:fontFamily="@font/mont_bold"
            android:text="@string/back"
            android:textColor="#E62324"
            android:textSize="@dimen/_14sp"
            app:layout_constraintBottom_toBottomOf="@id/back_icon"
            app:layout_constraintStart_toEndOf="@id/back_icon"
            app:layout_constraintTop_toTopOf="@id/back_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="@id/back_layout"
        app:layout_constraintEnd_toEndOf="@id/back_layout"
        app:layout_constraintStart_toStartOf="@id/back_layout"
        app:layout_constraintTop_toTopOf="@id/back_layout" />

    <TextView
        android:id="@+id/sms_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30dp"
        android:fontFamily="@font/mont_semibold"
        android:letterSpacing="-0.01"
        android:text="@string/enter_sms_code"
        android:textColor="#1D1D1B"
        android:textSize="@dimen/_22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_layout" />

    <LinearLayout
        android:id="@+id/sms_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_22dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sms_hint">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_layout"
            android:layout_width="@dimen/_22dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/mont_semibold"
                android:gravity="center"
                android:inputType="number"
                android:letterSpacing="-0.01"
                android:maxLength="1"
                android:textColor="#1D1D1B"
                android:textSize="@dimen/_27sp" />

            <View
                android:id="@+id/one_line"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_4dp"
                android:background="@drawable/sms_line_gray_background"
                app:layout_constraintTop_toBottomOf="@id/first" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/second_layout"
            android:layout_width="@dimen/_22dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_6dp"
            android:layout_marginEnd="@dimen/_6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/mont_semibold"
                android:gravity="center"
                android:inputType="number"
                android:letterSpacing="-0.01"
                android:maxLength="1"
                android:textColor="#1D1D1B"
                android:textSize="@dimen/_27sp" />

            <View
                android:id="@+id/two_line"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_4dp"
                android:background="@drawable/sms_line_gray_background"
                app:layout_constraintTop_toBottomOf="@id/second" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/third_layout"
            android:layout_width="@dimen/_22dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_6dp"
            android:layout_marginEnd="@dimen/_6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/mont_semibold"
                android:gravity="center"
                android:inputType="number"
                android:letterSpacing="-0.01"
                android:maxLength="1"
                android:textColor="#1D1D1B"
                android:textSize="@dimen/_27sp" />

            <View
                android:id="@+id/three_line"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_4dp"
                android:background="@drawable/sms_line_gray_background"
                app:layout_constraintTop_toBottomOf="@id/third" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fourth_layout"
            android:layout_width="@dimen/_22dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_6dp"
            android:layout_marginEnd="@dimen/_6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fourth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/mont_semibold"
                android:gravity="center"
                android:inputType="number"
                android:letterSpacing="-0.01"
                android:maxLength="1"
                android:textColor="#1D1D1B"
                android:textSize="@dimen/_27sp" />

            <View
                android:id="@+id/four_line"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_4dp"
                android:background="@drawable/sms_line_gray_background"
                app:layout_constraintTop_toBottomOf="@id/fourth" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fifth_layout"
            android:layout_width="@dimen/_22dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_6dp"
            android:layout_marginEnd="@dimen/_6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fifth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/mont_semibold"
                android:gravity="center"
                android:inputType="number"
                android:letterSpacing="-0.01"
                android:maxLength="1"
                android:textColor="#1D1D1B"
                android:textSize="@dimen/_27sp" />

            <View
                android:id="@+id/five_line"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_4dp"
                android:background="@drawable/sms_line_gray_background"
                app:layout_constraintTop_toBottomOf="@id/fifth" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/sent_code_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15dp"
        android:fontFamily="@font/mont_semibold"
        android:gravity="center"
        android:text="@string/we_sent_sms_code"
        android:textColor="#B2B2B2"
        android:textSize="@dimen/_12sp"
        app:layout_constraintTop_toBottomOf="@id/sms_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:fontFamily="@font/mont_semibold"
        android:gravity="center"
        android:text="@string/code_dont_received"
        android:textColor="#E62324"
        android:paddingVertical="@dimen/_11dp"
        android:textSize="@dimen/_12sp"
        app:layout_constraintTop_toBottomOf="@id/sent_code_title" />


</androidx.constraintlayout.widget.ConstraintLayout>