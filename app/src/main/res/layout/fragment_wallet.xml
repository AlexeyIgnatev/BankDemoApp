<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.wallet.WalletFragment"
    android:background="#F3F3F3"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/data_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_155dp"
        android:elevation="@dimen/_32dp"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000"
        android:background="@drawable/data_background">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12dp"
            android:fontFamily="@font/mont_bold"
            android:text="Асан"
            android:textColor="#1D1D1B"
            android:textSize="@dimen/_20sp"
            android:layout_marginStart="@dimen/_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notification_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_11dp"
            android:layout_marginEnd="@dimen/_17dp">
            <ImageView
                android:id="@+id/notification_btn"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_27dp"
                android:src="@drawable/notification_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="@dimen/_8sp"
                android:fontFamily="@font/mont_medium"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/notification_btn"
                app:layout_constraintEnd_toEndOf="@id/notification_btn"
                android:layout_marginTop="@dimen/_4dp"
                android:layout_marginEnd="@dimen/_5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/news"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80dp"
            tools:listitem="@layout/item_new"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginStart="@dimen/_16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_529dp"
        android:background="@drawable/info_background"
        android:layout_marginTop="-7dp"
        app:layout_constraintTop_toBottomOf="@id/data_layout">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/month_waste_layout"
            android:layout_width="@dimen/_171dp"
            android:layout_height="@dimen/_77dp"
            android:paddingHorizontal="@dimen/_16dp"
            android:paddingVertical="@dimen/_8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/total_waste_layout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_21dp"
            android:background="@drawable/wastes_background">
            <TextView
                android:id="@+id/month_waste_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Расходы в декабре"
                android:fontFamily="@font/mont_semibold"
                android:textSize="@dimen/_11sp"
                android:textColor="#B2B2B2"/>
            <TextView
                android:id="@+id/month_waste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99 123 456$"
                android:fontFamily="@font/mont_bold"
                android:textSize="@dimen/_18sp"
                android:textColor="#1D1D1B"
                app:layout_constraintTop_toBottomOf="@id/month_waste_title"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/month_waste_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/_10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/total_waste_layout"
            android:layout_width="@dimen/_171dp"
            android:layout_height="@dimen/_77dp"
            android:paddingHorizontal="@dimen/_16dp"
            android:paddingVertical="@dimen/_8dp"
            app:layout_constraintStart_toEndOf="@id/month_waste_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_21dp"
            android:background="@drawable/wastes_background">
            <TextView
                android:id="@+id/total_waste_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_balance"
                android:fontFamily="@font/mont_semibold"
                android:textSize="@dimen/_11sp"
                android:textColor="#B2B2B2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_11dp"/>
            <TextView
                android:id="@+id/total_waste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99 123 456$"
                android:fontFamily="@font/mont_bold"
                android:textSize="@dimen/_22sp"
                android:textColor="#1D1D1B"
                app:layout_constraintTop_toBottomOf="@id/total_waste_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_159dp"
            app:layout_constraintTop_toBottomOf="@id/total_waste_layout"
            android:layout_marginTop="@dimen/_10dp"
            android:clipToPadding="false"
            android:clipChildren="false"/>

        <TextView
            android:id="@+id/currency_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_currency"
            android:textColor="#1D1D1B"
            android:textSize="@dimen/_22sp"
            android:fontFamily="@font/mont_bold"
            android:letterSpacing="-0.01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pager"
            android:layout_marginTop="@dimen/_64dp"
            android:layout_marginStart="@dimen/_20dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_145dp"
            android:background="@drawable/currency_background"
            app:layout_constraintTop_toBottomOf="@id/currency_title"
            android:layout_marginHorizontal="@dimen/_20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:padding="@dimen/_16dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/currencies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_currency"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>