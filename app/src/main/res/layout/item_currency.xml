<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/_20dp"
    tools:ignore="MissingConstraints">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/_36dp"
        android:layout_height="@dimen/_36dp"
        android:src="@drawable/som_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_25dp"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kgs"
        android:fontFamily="@font/mont_semibold"
        android:textSize="@dimen/_12sp"
        android:letterSpacing="-0.01"
        android:textColor="#535353"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_constraintStart_toEndOf="@id/icon"
        android:layout_marginStart="@dimen/_9dp"
        android:layout_marginTop="@dimen/_4dp"/>
    <TextView
        android:id="@+id/currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fiat_som"
        android:textSize="@dimen/_9sp"
        android:textColor="#A5A5A5"
        android:fontFamily="@font/mont_semibold"
        android:letterSpacing="-0.01"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        android:layout_marginTop="@dimen/_2dp"/>

    <ImageView
        android:id="@+id/green_icon"
        android:layout_width="@dimen/_16dp"
        android:layout_height="@dimen/_16dp"
        android:src="@drawable/green_arrow"
        app:layout_constraintTop_toBottomOf="@id/icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_22dp"/>
    <TextView
        android:id="@+id/up_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 456 000,78"
        android:textColor="#1D1D1B"
        android:textSize="@dimen/_16sp"
        android:fontFamily="@font/mont_medium"
        android:letterSpacing="-0.01"
        android:layout_marginStart="@dimen/_9dp"
        app:layout_constraintStart_toEndOf="@id/green_icon"
        app:layout_constraintTop_toTopOf="@id/green_icon"
        app:layout_constraintBottom_toBottomOf="@id/green_icon"/>

    <ImageView
        android:id="@+id/red_icon"
        android:layout_width="@dimen/_16dp"
        android:layout_height="@dimen/_16dp"
        android:src="@drawable/red_arrow"
        app:layout_constraintTop_toBottomOf="@id/green_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_22dp"/>
    <TextView
        android:id="@+id/down_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 456 000,77"
        android:textColor="#1D1D1B"
        android:textSize="@dimen/_16sp"
        android:fontFamily="@font/mont_medium"
        android:letterSpacing="-0.01"
        android:layout_marginStart="@dimen/_9dp"
        app:layout_constraintStart_toEndOf="@id/red_icon"
        app:layout_constraintTop_toTopOf="@id/red_icon"
        app:layout_constraintBottom_toBottomOf="@id/red_icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>