<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <action
        android:id="@+id/startMainFragment"
        app:destination="@id/mainFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out" />

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.esom.bank.screens.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />

    <action
        android:id="@+id/startSwapFragment"
        app:destination="@id/swapFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out" />

    <fragment
        android:id="@+id/swapFragment"
        android:name="com.esom.bank.screens.swap.SwapFragment"
        android:label="fragment_swap"
        tools:layout="@layout/fragment_swap">
        <argument
            android:name="direction"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>

    <action
        android:id="@+id/startTransferFragment"
        app:destination="@id/transferFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out" />

    <fragment
        android:id="@+id/transferFragment"
        android:name="com.esom.bank.screens.transfer.TransferFragment"
        android:label="fragment_transfer"
        tools:layout="@layout/fragment_transfer" />

    <action
        android:id="@+id/startReceiveFragment"
        app:destination="@id/receiveFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out" />

    <fragment
        android:id="@+id/receiveFragment"
        android:name="com.esom.bank.screens.receive.ReceiveFragment"
        android:label="fragment_receive"
        tools:layout="@layout/fragment_receive" />

    <action
        android:id="@+id/startAuthFragment"
        app:destination="@id/authFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out"
        app:popUpTo="@id/nav_graph"
        app:popUpToInclusive="true" />

    <fragment
        android:id="@+id/authFragment"
        android:name="com.esom.bank.screens.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" />

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.esom.bank.screens.registration.RegistrationFragment"
        tools:layout="@layout/fragment_registration" />
    <action
        android:id="@+id/startRegistrationFragment"
        app:destination="@id/registrationFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out" />

    <fragment
        android:id="@+id/smsFragment"
        android:name="com.esom.bank.screens.sms.SmsFragment"
        tools:layout="@layout/fragment_sms" />
    <action
        android:id="@+id/startSmsFragment"
        app:destination="@id/smsFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out" />

    <fragment
        android:id="@+id/pinCreateFragment"
        android:name="com.esom.bank.screens.pinCreate.PinCreateFragment"
        tools:layout="@layout/fragment_pin_create" />
    <action
        android:id="@+id/startPinCreateFragment"
        app:destination="@id/pinCreateFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out" />

    <fragment
        android:id="@+id/logInFragment"
        android:name="com.esom.bank.screens.login.LogInFragment"
        tools:layout="@layout/fragment_log_in"/>
    <action
        android:id="@+id/startLogInFragment"
        app:destination="@id/logInFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out"/>

    <fragment
        android:id="@+id/bioFragment"
        android:name="com.esom.bank.screens.bio.BioFragment"
        tools:layout="@layout/fragment_bio"/>
    <action
        android:id="@+id/startBioFragment"
        app:destination="@id/bioFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out"/>

    <fragment
        android:id="@+id/splashLogInFragment"
        android:name="com.esom.bank.screens.splashLogIn.SplashLogInFragment"
        tools:layout="@layout/fragment_splash_log_in"/>
    <action
        android:id="@+id/startSplashLogInFragment"
        app:destination="@id/splashLogInFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out"/>

    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.esom.bank.screens.notification.NotificationFragment"
        tools:layout="@layout/fragment_notification"/>
    <action
        android:id="@+id/startNotificationFragment"
        app:destination="@id/notificationFragment"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out"/>
</navigation>