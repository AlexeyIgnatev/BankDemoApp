<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BankDemoApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="Theme.BankDemoApp" parent="Base.Theme.BankDemoApp" />

    <style name="EditTextHint_12sp" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="EditTextHint_14sp" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="EditTextError_10sp" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/_10sp</item>
    </style>

    <style name="MineCustomSelectedTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/black</item>
    </style>

    <style name="MineCustomNotSelectedTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="@style/ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialog</item>
    </style>

    <style name="BottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
    </style>
</resources>